{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      "@Components": ["src/components"],
      "@Components/*": ["src/components/*"],
      "@Utils": ["src/utils"],
      "@Utils/*": ["src/utils/*"]
    },
    "allowSyntheticDefaultImports": true
  }
}
